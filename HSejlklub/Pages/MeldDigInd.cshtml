@page
@model PrivacyModel
@{
    ViewData["Title"] = "Meld dig ind";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HSejlklub</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Melddigind.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HSejlklub.styles.css" asp-append-version="true" />
</head>
<body>
<section class="container">
    <header> Meld dig ind </header>
    <form action="#" class="form">
        <div class="input-box">
            <label> Navn og Efternavn</label>
            <input type="text" placeholder="Indsæt navn og efternavn">
            <div class="input-box">
                <label> Email Adresse</label>
                <input type="text" placeholder="Indsæt email adresse" required>
            </div>
        </div>
        <div class="column">
            <div class="input-box">
                <label> Telefon nummer</label>
                <input type="number" placeholder="Indsæt telefon nummer" required>
            </div>
            <div class="input-box">
                <label> Fødselsdagsdato</label>
                <input type="date" placeholder="Indsæt fødselsdagsdato" required>
            </div>
        </div>
        
        <div class="gender-box">
            <h3>Køn</h3>
            <div class="gender-option">
                <div class="gender">
                    <input type="radio" id="check-mand" name="gender" checked>
                    <label for="check-mand">Mand</label>
                </div>
                <div class="gender">
                    <input type="radio" id="check-kvinde" name="gender">
                    <label for="check-kvinde">Kvinde</label>
                </div>
                <div class="gender">
                    <input type="radio" id="check-other" name="gender">
                    <label for="check-other">Ønsker ikke at oplyse</label>
                </div>
            </div>
        </div>
        <div class="input-box adresse">
            <label> Adresse</label>
            <input type="text" placeholder="Indsæt Adresse" required>
            <input type="text" placeholder="Indsæt Adresse linje 2" required>
            <div class="column">
                <input type="text" placeholder="Indsæt by" required>
                <input type="number" placeholder="Indsæt postnummer" required>
            </div>
        </div>
        <div class="medlem">
            <div class="select-box">
                <select>
                    <option hidden>Medlemskab</option>
                    <option>Junior</option>
                    <option>Senior</option>
                    <option>Familie</option>
                </select>
            </div>
        </div>
        
        <button> Submit</button>
    </form>
</section>
</body>
