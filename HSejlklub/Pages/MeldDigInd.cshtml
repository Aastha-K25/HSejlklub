@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model PrivacyModel
@{
    ViewData["Title"] = "Meld dig ind";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hillerød Sejlklub</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Melddigind.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HSejlklub.styles.css" asp-append-version="true" />
</head>
<body>
<section class="container-medlem">
    <header> <b>Meld dig ind</b></header>
    <hr/>
    <form action="#" class="form">
        <div class="medlem-box">
            <h3>Medlemskab</h3>
            <h6><i>Læs mere om medlemskaberne i <a class="Om-klubben-text" asp-area="" asp-page="/Omklubben">Om klubben</a></i></h6>
            <div class="medlem-option">
                <div class="medlemskab">
                    <input type="radio" id="check-Junior" name="Medlem" checked>
                    <label for="check-Junior">Junior medlem</label>
                </div>
                <div class="medlemskab">
                    <input type="radio" id="check-JuniorMedlem" name="Medlem">
                    <label for="check-JuniorMedlem">Junior medlem inkl. pladsleje</label>
                </div>
                <div class="medlemskab">
                    <input type="radio" id="check-Senior" name="Medlem">
                    <label for="check-Senior">Senior medlem</label>
                </div>
                <div class="medlemskab">
                    <input type="radio" id="check-SeniorMedlem" name="Medlem">
                    <label for="check-SeniorMedlem">Senior medlem inkl. pladsleje</label>
                </div>
                <div class="medlemskab">
                    <input type="radio" id="check-Familie" name="Medlem">
                    <label for="check-Familie">Familie (hele husstanden)</label>
                </div>
                <div class="medlemskab">
                    <input type="radio" id="check-Baadeplads" name="Medlem">
                    <label for="check-Baadeplads">Bådeplads</label>
                </div>
            </div> 
        </div>
        <div class="input-box">
            <label> Navn og Efternavn</label>
            <input type="text" placeholder="Indsæt navn og efternavn">
            <div class="input-box">
                <label> Email Adresse</label>
                <input type="text" placeholder="Indsæt email adresse" required>
            </div>
        </div>
        <div class="column">
            <div class="input-box">
                <label> Telefon nummer</label>
                <input type="number" placeholder="Indsæt telefon nummer" required>
            </div>
            <div class="input-box">
                <label> Fødselsdagsdato</label>
                <input type="date" placeholder="Indsæt fødselsdagsdato" required>
            </div>
        </div>

        <div class="gender-box">
            <h3>Køn</h3>
            <div class="gender-option">
                <div class="gender">
                    <input type="radio" id="check-mand" name="gender" checked>
                    <label for="check-mand">Mand</label>
                </div>
                <div class="gender">
                    <input type="radio" id="check-kvinde" name="gender">
                    <label for="check-kvinde">Kvinde</label>
                </div>
                <div class="gender">
                    <input type="radio" id="check-other" name="gender">
                    <label for="check-other">Ønsker ikke at oplyse</label>
                </div>
            </div>
        </div>
        <div class="input-box adresse">
            <label> Adresse</label>
            <input type="text" placeholder="Indsæt Adresse" required>
            <input type="text" placeholder="Indsæt Adresse linje 2" required>
            <div class="column">
                <input type="text" placeholder="Indsæt by" required>
                <input type="number" placeholder="Indsæt postnummer" required>
            </div>
        </div>
        <button> Submit</button>
    </form>
</section>
</body>
